<html>
	<head>
		<title>$action.getText("cmis.config.title")</title>
	</head>
	<body>
  	 	#parse ( "/template/includes/actionmessages.vm" )
		#parse ( "/template/includes/actionerrors.vm" )
        <table class="grid" width="80%">
            <tr>
                <td>
                    <form name="configuration" action="save.action" method="POST">
                        <table width="60%">
                            <tr>
                                <th>Realm</th>
                                <th>Username</th>
                                <th>Password</th>
                            </tr>
                            #if ($credentials.size() > 0)
								#foreach ($realm in $credentials.keySet())
									#set ($index = $velocityCount - 1)
	                                <tr>
	                                    <td>
	                                        <input type="text" name="realms" size="50" value="$realm">
	                                    </td>
	                                    <td>
	                                        <input type="text" name="usernames" size="20" value="$credentials.get($realm).get(0)">
	                                    </td>
	                                    <td>
	                                        <input type="password" name="passwords" size="20" value="$credentials.get($realm).get(1)">
	                                    </td>
                                        <td>
                                            <a href="#" onclick="forms.configuration.action='delete.action'; forms.configuration.indexToDelete.value = $index; forms.configuration.submit();"><img src="$req.contextPath/images/icons/trash_16.gif" border="0"></a>
                                        </td>
	                                </tr>
	                            #end
	                        #else
	                            <tr>
	                                <td>
	                                    <input type="text" name="realms" size="50" value="http://">
	                                </td>
	                                <td>
	                                    <input type="text" name="usernames" size="20">
	                                </td>
	                                <td>
	                                    <input type="password" name="passwords" size="20">
	                                </td>
	                            </tr>
	                        #end
                            <tr><td colspan="3" align="right"><input type="submit" value="$action.getText("cmis.config.button.add")" onclick="forms.configuration.action='add.action';"></td></tr>
                        </table>
                        <input type="hidden" name="indexToDelete" value="-1">
                        <input type="submit" value="Save">
                    </form>
                </td>
            </tr>
        </table>
		#parse ( "/admin/admin-breadcrumbs.vm" )
	</body>
</html>